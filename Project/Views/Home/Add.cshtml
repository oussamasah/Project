@{
    ViewData["Title"] = "Add Project";
    
}
@model Project.Models.Form.ProjectForm


<div class="mb-2">
    <a class="btn btn-outline-warning " asp-area="" asp-controller="Home" asp-action="index"><i class="bi bi-arrow-return-left me-2"></i> Return</a>
</div>
<div class="row justify-content-center">
    <form method="post" asp-action="@(Model?.Id>0 ? "Edit" : "Add")">
        @Html.AntiForgeryToken()
    <div class="card p-0">
        <div class="card-header">

                <h1>@(Model?.Id>0 ? "Edit  " : "Add new ")project</h1>
        </div>
        <div class="card-body">
        
           
                <div class="form-floating mb-2">
                    <input type="hidden" asp-for="Id" />
                    <input asp-for="Name" class="form-control" autocomplete="Name" aria-required="true" />
                    <label asp-for="Name" class="form-label">Name</label>
                    <span asp-validation-for="Name" class="text-danger"></span>
                </div>
          
        </div>
        <div class="card-footer text-right">
                <button type="submit" class="btn btn-dark "><i class="bi bi-box-arrow-in-down me-2"></i>@(Model?.Id > 0 ? "Edit project " : "Save project")</button>
        </div>
    </div>
    </form>
</div>

@section Scripts {
    <partial name="_ValidationScriptsPartial" />
}
